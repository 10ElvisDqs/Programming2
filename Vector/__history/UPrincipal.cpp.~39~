void __fastcall TForm1::EstaOrdenado1Click(TObject *Sender)
{
    FormAClase(SGVector, Vec);
	if(Vec->Esta_Ordenado()){
		EResultado->Text="Esta Ordenado";
	}else{
        EResultado->Text="No esta Ordenado";
    }
	ClaseAForm(Vec,SGVector);
}
